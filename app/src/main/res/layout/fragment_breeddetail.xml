<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    >

    <!--Loading icon for the imageview-->
    <LinearLayout
        android:id="@+id/layout_imageLoadingPanel"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#FFF">

        <ProgressBar
            android:id="@+id/layout_imageLoadingPanel_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true" />

        <TextView
            android:id="@+id/layout_imageLoadingPanel_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:text="Getting image from the API..." />
    </LinearLayout>

    <!--Image-->
    <ImageView
        android:id="@+id/imageView_breedImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="20dp"
        />

    <!--The breed name-->
    <TextView
        android:id="@+id/textView_breedDetailTitle"
        android:layout_below="@+id/imageView_breedImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:textColor="@color/colorPrimary"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        />

    <!--The breed details-->
    <LinearLayout
        android:id="@+id/layout_DetailWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/textView_breedDetailTitle"
        android:layout_marginTop="10dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        >
        <LinearLayout
            android:id="@+id/LinearLayout_breedOriginWrapper"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:paddingBottom="5dp"
                android:text="Origin"
                />
            <TextView
                android:id="@+id/textView_breedOrigin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:paddingBottom="5dp"
                android:text="Weight"
                />
            <TextView
                android:id="@+id/textView_breedWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:paddingBottom="5dp"
                android:text="Lifespan"
                />
            <TextView
                android:id="@+id/textView_breedLifespan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                />
        </LinearLayout>
    </LinearLayout>


    <!--The API credit-->
    <TextView
        android:id="@+id/textView_credit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_DetailWrapper"
        android:paddingBottom="15dp"
        android:layout_marginTop="30dp"
        android:textSize="12sp"
        android:textColor="#999"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        />

</RelativeLayout>